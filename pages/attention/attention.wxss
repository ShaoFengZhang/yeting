.messageItem {
    width: 100%;
    height: 100rpx;
    box-sizing: border-box;
    padding: 0 40rpx;
    margin-top: 44rpx;
    position: relative;
}

.userIcon, .userIcon image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 8rpx;
}

.userIcon {
    margin-right: 16rpx;
    position: relative;
}

.messageTxt {
    width: 414rpx;
    height: 100rpx;
    text-align: left;
    margin-right: 20rpx;
}

.approve, .approve image {
    width: 64rpx;
    height: 64rpx;
}

.approve {
    position: absolute;
    top: 66rpx;
    left: 102rpx;
}

.attenTxt {
    border-radius: 8rpx;
    text-align: center;
    color: white;
    line-height: 60rpx;
    font-size: 28rpx;
    position: relative;
}

.attentionTxt {
    width: 136rpx;
    height: 60rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
}

.hasAttentionTxt {
    width: 136rpx;
    height: 60rpx;
    background: rgba(255, 255, 255, 1);
    border: 2rpx solid rgba(231, 231, 231, 1);
    color: #000;
}
