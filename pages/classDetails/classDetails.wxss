.bg {
    background-color: #fff;
}

.topPicView, .topPicView image {
    width: 100%;
    height: 464rpx;
}

.collectionView {
    width: 100%;
    min-height: 362rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 60rpx 60rpx 0px 0px;
    position: relative;
    top: -68rpx;
    box-sizing: border-box;
    padding: 34rpx 40rpx 0;
}

.collectionTitle {
    color: #171f24;
    font-size: 56rpx;
    font-weight: bold;
}

.uploadNumtop {
    margin-top: 24rpx;
    font-size: 32rpx;
    color: #999;
}

.collectionDes {
    width: 100%;
    max-height: 168rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    color: #171f24;
    font-size: 36rpx;
    line-height: 56rpx;
    margin-top: 24rpx;
    margin-bottom: 30rpx;
}

