.fontNorm {
    color: #282828;
    font-size: 28rpx;
    box-sizing: border-box;
    padding: 0 0 0 40rpx;
}

.userIcon {
    width: 200rpx;
    height: 200rpx;
    background: rgba(216, 216, 216, 1);
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.1);
    border-radius: 20rpx;
    margin: 64rpx auto 0;
    overflow: hidden;
    position: relative;
}

.userIcon image {
    width: 200rpx;
    height: 200rpx;
}

.nicheng {
    margin-bottom: 12rpx;
    font-size:32rpx;
}

.userNickName {
    font-weight: bold;
    padding-right: 40rpx;
    position: relative;
}

.deleNickName {
    width: 32rpx;
    height: 32rpx;
    background: #cdced3;
    border-radius: 50%;
    text-align: center;
    line-height: 28rpx;
    position: absolute;
    top: 0;
    right: 40rpx;
}

.xclass{
    width: 50rpx;
    height: 50rpx;
    position: absolute;
    top: 0;
    right: 40rpx;
    
}

.viewLine {
    width: 670rpx;
    height: 2rpx;
    background-color:#f3f5f9;
    margin: 24rpx auto 0;
}

#nameInput {
    width: 100%;
}

.saveBtnView {
    width: 680rpx;
    height: 100rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    border-radius: 16rpx;
    margin: 40rpx auto 0;
    text-align: center;
    line-height: 100rpx;
    color: white;
    font-size: 40rpx;
    font-weight: bold;
    position: relative;
}

#nickNameInput {
    width: 100%;
}
