.bg {
    position: relative;
}

.topView {
    width: 100%;
    height: 414rpx;
    padding: 40rpx;
    box-sizing: border-box;
}

.line {
    width: 750rpx;
    height: 16rpx;
    background: rgba(243, 245, 249, 1);
}

.dayView {
    width: 100%;
    /* height: 102rpx; */
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 40rpx;
}

.dayItem {
    width: 64rpx;
    /* height: 100%; */
    text-align: center;
}

.beansNum {
    background: #ececf6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.beansNum, .beansNum image {
    width: 60rpx;
    height: 60rpx;
}

.beansNum image {
    vertical-align: top;
}

.signBtn {
    width: 320rpx;
    height: 88rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    border-radius: 8rpx;
    color: #fff;
    line-height: 88rpx;
    text-align: center;
    font-size: 40rpx;
    font-weight: bold;
    margin: 40rpx auto 0;
}

.haveSignBtn{
  background:#F3F5F9 ;
  color: #9B9B9B;
  font-weight: 400;
}

.Task {
    width: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #282828;
    font-size: 32rpx;
    position: relative;
    /* font-weight: bold; */
}

.rightBtn {
    width: 132rpx;
    height: 56rpx;
    background: linear-gradient(90deg, rgba(110, 198, 252, 1) 0%, rgba(69, 206, 189, 1) 100%);
    border-radius: 4rpx;
    text-align: center;
    line-height: 56rpx;
    color: #fff;
}

.haveComplete {
    background: #f3f5f9;
    color: #9b9b9b;
}

#getInfoBtn {
    width: 100vw;
    min-height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    opacity: 0;
}

/* guanggao */
navigator{
    width: 100%;
    height: 40rpx;
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
}
