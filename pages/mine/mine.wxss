/* 顶部用户基本信息 */

.bg {
    width: 100%;
    height: 100vh;
}

.userInfoView {
    width: 100%;
    box-sizing: border-box;
    padding: 0 24rpx 0 40rpx;
    margin-top: 18rpx;
}

.userIcon {
    width: 120rpx;
    height: 120rpx;
    box-shadow: 0px 4rpx 32rpx 0px rgba(0, 0, 0, 0.2);
    border-radius: 20rpx;
    overflow: hidden;
    margin-right: 24rpx;
}

.userIcon image {
    width: 120rpx;
    height: 120rpx;
    border-radius: 20rpx;
}

.userDetails {
    height: 100%;
    color: #282828;
    justify-content: space-around;
}

.userDetails view {
    width: 542rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.userName {
    font-size: 40rpx;
    font-weight: bold;
}

.userDecs {
    font-size: 28rpx;
}

/* 用户数据统计条 */

.userDataView {
    width: 720rpx;
    height: 140rpx;
    box-shadow: 6px 5px 10px -4px rgba(0, 0, 0, 0.06), 5px 1px 10px -4px rgba(0, 0, 0, 0.06);
    border-radius: 10rpx;
    margin-top: 42rpx;
    justify-content: space-around;
    text-align: center;
    box-sizing: border-box;
    padding-left: 34rpx;
}

/* 实时通知 */

.dynamicData {
    width: 670rpx;
    height: 162rpx;
    margin: 42rpx auto 0;
    text-align: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 20rpx;
}

.message, .collection, .dynamic {
    height: 100%;
    position: relative;
}

.dynamicData image {
    width: 52rpx;
    height: 52rpx;
}

.redStar {
    width: 16rpx;
    height: 16rpx;
    background: rgba(255, 73, 58, 1);
    position: absolute;
    top: -6rpx;
    right: -6rpx;
    border-radius: 50%;
}

.editorView {
    width: 750rpx;
    height: 120rpx;
    line-height: 120rpx;
    box-sizing: border-box;
    padding: 0 24rpx 0 40rpx;
    align-items: center;
    justify-content: space-between;
    position: relative;
}

#contact {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    top: 0;
    opacity: 0;
}

#getInfoBtn {
    width: 100vw;
    height: 100vh;
    position: fixed;
    left: 0;
    top: 0;
    opacity: 0;
}

.fansNum {
    position: relative;
}

/* 改版加的东西 */

.questionMask {
    display: inline-block;
    width: 28rpx;
    height: 28rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 32rpx;
    border: 2rpx solid #27bcad;
    color: #27bcad;
    font-size: 28rpx;
    position: absolute;
    right: -36rpx;
    bottom: 4rpx;
}

