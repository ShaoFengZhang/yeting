.bg {
    width: 100%;
}

.topCard {
    width: 670rpx;
    height: 448rpx;
    background: #fff;
    box-shadow: 0px 8rpx 32rpx 0px rgba(40, 40, 40, 0.1);
    margin: 60rpx auto 0;
    border-radius: 16rpx;
    overflow: hidden;
    /* background-repeat: no-repeat;
