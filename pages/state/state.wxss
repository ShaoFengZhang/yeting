.topUserCenter {
    width: 100%;
    margin-top: 20rpx;
    height: 574rpx;
    background-repeat: no-repeat;
    background-image: url('https://duanju.58100.com/upload/new/2.png');
    background-size: cover;
    overflow: hidden;
    box-sizing: border-box;
    padding-left: 62rpx;
}

.userIconView {
    width: 638rpx;
    height: 200rpx;
    margin-top: 18rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

/* touxiang */

.userIconView image {
    width: 200rpx;
    height: 200rpx;
    background: rgba(216, 216, 216, 0);
    box-shadow: 0px 20rpx 40rpx 0px rgba(0, 0, 0, 0.2);
    border-radius: 20rpx;
}

/* 关注按钮 */

.collectonView {
    width: 180rpx;
    height: 64rpx;
    background-color: #ffda44;
    box-shadow: 0px 20rpx 40rpx 0px rgba(255, 218, 68, 0.3);
    border-radius: 35rpx;
    color: #282828;
    font-size: 32rpx;
    line-height: 64rpx;
    text-align: center;
    font-weight: bold;
}

/* 已关注 */

.hasCollectonView {
    background: #fff;
    border: 2px solid rgba(231, 231, 231, 1);
    box-shadow: 0px 0rpx 0rpx 0px rgba(255, 218, 68, 0.3);
}

.userName {
    color: #000;
    font-size: 40rpx;
    font-weight: bold;
    margin-top: 32rpx;
}

.userDes {
    width: 656rpx;
    height: 148rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    color: #999;
    font-size: 28rpx;
    line-height: 50rpx;
    margin-top: 16rpx;
}

/* 列表 */

.picListView {
    width: 100%;
    box-sizing: border-box;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.picView {
    width: 320rpx;
    height: 600rpx;
    background: #fff;
    box-shadow: 6rpx 6rpx 20rpx 0px rgba(36, 39, 44, 0.06);
    border-radius: 20rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
}

.pic, .pic image {
    width: 320rpx;
    height: 388rpx;
    background: rgba(40, 40, 40, 1);
    box-shadow: 0px 10rpx 20rpx 0px rgba(0, 0, 0, 0.05);
    border-radius: 20rpx 20rpx 0px 0px;
}

.picTxt {
    width: 272rpx;
    height: 116rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(40, 40, 40, 1);
    line-height: 40rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    margin: 24rpx auto 20rpx;
}

.uploadNum {
    height: 32px;
    font-size: 24rpx;
    font-weight: 500;
    color: rgba(47, 48, 62, 1);
    line-height: 28rpx;
    margin-left: 24rpx;
}
